<div class="container signup-container">
    <div class="row-fluid">
        <div class="span4 offset4">
            <h2>Signup</h2>
            <form class="well">
                <div class="status-box text-center" ng-class="'text-'+state.status" ng-bind="state.message"></div>
                <div class="form-group">
                    <label for="signupEmail">Email Address</label>
                    <input type="email" class="form-control" id="signupEmail" ng-model="state.email" placeholder="email">
                </div>
                <div class="form-group">
                    <label for="singupPassword">Password</label>
                    <input type="password" class="form-control" id="singupPassword" ng-model="state.password" placeholder="password">
                </div>
                <button class="btn btn-primary btn-block" ng-click="signup()" ng-disabled="state.loading">Signup</button>
            </form>
            <h3>Or use...</h3>
            <div class="well text-center">
                <a class="btn btn-default" href="#">Google</a>
                <a class="btn btn-default" href="#">Facebook</a>
                <a class="btn btn-default" href="#">Twitter</a>
            </div>
        </div>
    </div>
</div>
