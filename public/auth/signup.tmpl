<div class="container signup-container">
    <div class="row-fluid">
        <div class="span4 offset4">
            <h2>Signup</h2>
            <form class="well" method="post" action="/signup">
                <div class="form-group">
                    <label for="signupEmail">Email Address</label>
                    <input type="email" class="form-control" id="signupEmail" name="email" placeholder="email">
                </div>
                <div class="form-group">
                    <label for="singupPassword">Password</label>
                    <input type="password" class="form-control" id="singupPassword" name="password" placeholder="password">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Signup</button>
            </form>
            <h3>Or use...</h3>
            <div class="well text-center">
                <a class="btn btn-default" href="#">Google</a>
                <a class="btn btn-default" href="#">Facebook</a>
                <a class="btn btn-default" href="#">Twitter</a>
            </div>
        </div>
    </div>
</div>
